---
import Layout from "../layout.astro";
import logo from "../img/colour_sidetext_dark.svg";
import {
  InstagramLogoIcon,
  GitHubLogoIcon,
  DiscordLogoIcon,
} from "@radix-ui/react-icons";
import { Image } from "astro:assets";
import {
    HamburgerMenuIcon,
    ArrowRightIcon,
    ChevronDownIcon,
} from "@radix-ui/react-icons";
---

<Layout title="Contact us!" desc="Looking to collaborate, or have a burning question to ask?" showTitle>
    <div class="max-w-6xl mx-auto px-2">
        <p class="text-center my-10">
            Looking to collaborate, or have a burning question to ask?
        </p>
        <hr class="border-white/30" />
        <div class="">
            <ul class="my-2 h-[70vh] flex flex-col justify-around">
                <li>
                    <h3 class="flex justify-center text-center">
                        Reach out!
                    </h3>
                </li>
                <li>
                    <p class="inline-block w-full text-center justify-items-center">
                        <img src="/favicon.svg" class=" inline-block max-w-10 max-h-10"> 
                        <span class="mx-1"></span> 
                        <a href="mailto:hello@buildingblocs.sg" class="text-[#FFA216] underline">
                            hello@buildingblocs.sg
                        </a>
                    </p>
                </li>
                <li>
                    <h3 class="flex justify-center text-center mb-1">Join our community!</h3>
                </li>
                <li>
                    <ul class="flex justify-between text-center max-h-10 mx-40">
                        <li class="text-center inline-block">
                            <a aria-label="Our Instagram" href="https://instagram.com/buildingblocs25"
                            >
                            <InstagramLogoIcon className="inline-block text-slate-200 hover:text-slate-400 transition w-10 h-10"/>
                            </a>
                        </li>
                        <li class="text-center inline-block">
                            <a aria-label="Our Discord" href="https://discord.gg/VSHyrbsJFs">
                                <DiscordLogoIcon className="inline-block text-slate-200 hover:text-slate-400 transition w-10 h-10"/>
                            </a>
                        </li>
                        <li class="text-center inline-block">
                            <a aria-label="Our GitHub" href="https://github.com/buildingblocs">
                                <GitHubLogoIcon className="text-slate-200 hover:text-slate-400 transition w-10 h-10" />
                            </a>
                        </li>
                        <li class="text-center inline-block">
                            <a aria-label="Our YouTube" href="https://youtube.com/buildingblocssg">
                                <svg xmlns="http://www.w3.org/2000/svg" width="17" height="16" fill="currentColor" class="text-slate-200 hover:text-slate-400 w-10 h-10 transition" viewBox="0 0 16 16">
                                    <path d="M8.051 1.999h.089c.822.003 4.987.033 6.11.335a2.01 2.01 0 0 1 1.415 1.42c.101.38.172.883.22 1.402l.01.104.022.26.008.104c.065.914.073 1.77.074 1.957v.075c-.001.194-.01 1.108-.082 2.06l-.008.105-.009.104c-.05.572-.124 1.14-.235 1.558a2.01 2.01 0 0 1-1.415 1.42c-1.16.312-5.569.334-6.18.335h-.142c-.309 0-1.587-.006-2.927-.052l-.17-.006-.087-.004-.171-.007-.171-.007c-1.11-.049-2.167-.128-2.654-.26a2.01 2.01 0 0 1-1.415-1.419c-.111-.417-.185-.986-.235-1.558L.09 9.82l-.008-.104A31 31 0 0 1 0 7.68v-.123c.002-.215.01-.958.064-1.778l.007-.103.003-.052.008-.104.022-.26.01-.104c.048-.519.119-1.023.22-1.402a2.01 2.01 0 0 1 1.415-1.42c.487-.13 1.544-.21 2.654-.26l.17-.007.172-.006.086-.003.171-.007A100 100 0 0 1 7.858 2zM6.4 5.209v4.818l4.157-2.408z"/>
                                </svg>
                            </a>
                        </li>
                    </ul>
                </li>
                <li>
                    <h3 class="flex justify-center text-center">Learn more about our team!</h3>
                </li>
                <li>
                    <div class="flex justify-center text-center items-center">
                        <a
                            href="/team"
                            class="w-72 py-2 mt-2 rounded-full bg-slate-900/50 backdrop-filter backdrop-blur-lg ring-1  ring-slate-800 flex justify-center items-center gap-x-4 text-md"
                        >
                            <p>Our Team</p>
                        </a>
                    </div>     
                </li>
            </ul>
        
    </div>
</Layout>
