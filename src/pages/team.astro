type TeamMember = {
  githubLink?: string;
  inLink?: string;
  imageSrc?: string;
  name: string;
  description?: string;
  webLink?: string;
  lead?: boolean;
  igLink?: string;
};

type Team = {
  [key: string]: TeamMember;
};

type Category =
